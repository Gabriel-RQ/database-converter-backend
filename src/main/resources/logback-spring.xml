<configuration>

    <springProperty scope="context" name="migrationDataPath" source="migration.data.path"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="MIGRATION" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator class="ch.qos.logback.classic.sift.MDCBasedDiscriminator">
            <key>migrationId</key>
            <defaultValue>unknown</defaultValue>
        </discriminator>

        <sift>
            <appender name="FILE-${migrationId}" class="ch.qos.logback.core.FileAppender">

                <file>${migrationDataPath}/${migrationId}/logs/migration.log</file>

                <append>true</append>
                <encoder>
                    <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger - %msg%n</pattern>
                </encoder>
            </appender>
        </sift>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <logger name="com.gabrielrq.database_converter.service" level="INFO" additivity="false">
        <appender-ref ref="MIGRATION" />
    </logger>

</configuration>
